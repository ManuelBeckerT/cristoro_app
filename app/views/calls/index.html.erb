<p id="notice"><%= notice %></p>

<h1>Calls</h1>

<table>
  <thead>
    <tr>
      <th>Fecha llamado</th>
      <th>Fecha retiro</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%= collection_select(:comuna, :register_id, Register.all.distinct, :id, :comuna) %>
  puts id
  <tbody>
    <% @calls.each do |call| %>
      <tr>
        <td><%= call.fecha_llamado %></td>
        <td><%= call.fecha_retiro %></td>
        <td><%= call.status %></td>
        <td><%= Register.find_by('id = ?', call.register_id).comuna %></td>
        <td><%= link_to 'Show', call %></td>
        <td><%= link_to 'Edit', edit_call_path(call) %></td>
        <td><%= link_to 'Destroy', call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Call', new_call_path %>
<%= link_to 'Back', welcome_index_path %>
