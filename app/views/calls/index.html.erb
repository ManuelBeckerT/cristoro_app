<p id="notice"><%= notice %></p>

<h1>Calls</h1>

<table>
  <thead>
    <tr>
      <th>Fecha llamado</th>
      <th>Fecha retiro</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <li class = "dropdown">
    <a href = "#" class = "dropdown-toggle" data-toggle = "dropdown" role ="button" aria-expanded="false"> Comunas <span class ="caret"></span></a>
    <ul class ="dropdown-menu" role = "menu">
      <% @comunas.each do |comuna| %>
        <li>
          <%= link_to comuna, calls_path(filtro_comuna: comuna), class: "link" %>
        </li>
      <% end %>
    </ul>
  </li>

  <tbody>
    <% @calls.each do |call| %>
      <tr>
        <td><%= call.fecha_llamado %></td>
        <td><%= call.fecha_retiro %></td>
        <td><%= call.status %></td>
        <td><%= call.register.comuna %></td>
        <td><%= link_to 'Show', call %></td>
        <td><%= link_to 'Edit', edit_call_path(call) %></td>
        <td><%= link_to 'Destroy', call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Call', new_call_path %>
<%= link_to 'Back', welcome_index_path %>
