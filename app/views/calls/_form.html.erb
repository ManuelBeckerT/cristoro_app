      <h2><%= pluralize(call.errors.count, "error") %> prohibited this call from being saved:</h2>

      <ul>
      <% call.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <% Register.all.each do |foro| %>
      <li class ="<%= 'active' if params[:foro]== foro.comuna %>">
        <%= link_to foro.comuna, calls_path(foro: foro.comuna), class: "link" %>
      </li>
    <% end %>
  </div>
</div>



  <%= simple_form_for @call do |c| %>

    <%= select_tag(:register_id, options_for_select(@registers), :prompt => "Seleccionar una comuna") %>
