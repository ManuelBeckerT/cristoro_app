    <%= c.datetime_select :fecha_retiro, id: :call_fecha_retiro  %>
    <%= form.label :status %>
    <%= form.text_field :status, id: :call_status %>
    <%= c.button :submit, 'Crear' %>

  <% end %>


<% end %>
